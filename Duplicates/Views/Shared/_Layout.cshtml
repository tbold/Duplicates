<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/modernizr")
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTable.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTable.min.js"></script>
    <script src="~/Scripts/DataTableManager.js"></script>
    <link href="~/Content/custom.css" rel="stylesheet" />
</head>
<body>
    <header class="header-banner">
        <div class="container-width">
            <!--Navbar-->
            <nav class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavBar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("LGHF", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Search", "Index", "Search")</li>
                            <li>@Html.ActionLink("Database", "Database", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="clearfix"></div>
            <div class="lead-title">Duplicates Finder</div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <div class="footer-container">
            <div class="foot-lists">
                <div class="foot-list">
                    <div class="foot-list-title">About us</div>
                    <div class="foot-list-item">Contact</div>
                    <div class="foot-list-item">Events</div>
                    <div class="foot-list-item">Company</div>
                    <div class="foot-list-item">Jobs</div>
                    <div class="foot-list-item">Blog</div>
                </div>
                <div class="foot-list">
                    <div class="foot-list-title">Services</div>
                    <div class="foot-list-item">Education</div>
                    <div class="foot-list-item">Partner</div>
                    <div class="foot-list-item">Community</div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </footer>
</body>
</html>